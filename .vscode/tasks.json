{
    "tasks": [
        {
            "type": "shell",
            "label": "with_libft",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Werror",
                "-Wextra",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L",
                ".",
                "-lft"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}